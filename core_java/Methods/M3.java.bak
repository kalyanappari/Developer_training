import java.util.Scanner;

class M3 
{
	public static void main(String[] args) 
	{
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Automated Area Calculations!");
		
		while(true)
		{
			
			System.out.println("Choice the below option: \n1. Square\n2. Rectangle\n3. Trangle\n4.Circle\n5.Exit");
			
			System.out.print("Enter your choice: ");
			
			int choice = sc.nextInt();
			
			switch (choice)
			{
				case 1:
					System.out.print("Enter the side value: ");
				    double side = sc.nextDouble();
					double area1 = areaOfSquare(side);
					System.out.println("Area of Square: " + area1);
					break;
				case 2:
					System.out.print("Enter the length value: ");
				    double l = sc.nextDouble();
					System.out.print("Enter the breadth value: ");
					double b = sc.nextInt();
					double area2 = areaOfRectangle(l,b);
					System.out.println("Area of Rectangle: " + area2);
					break;
				case 3:
					System.out.print("Enter the heigth value: ");
				    double h = sc.nextDouble();
					System.out.print("Enter the breadth value: ");
					double b1 = sc.nextDouble();
					double area3 = areaOfTriangle(h,b1);
					System.out.println("Area of Triangle: " + area3);
					break;
				case 4:
					System.out.print("Enter the radius value: ");
				    double r = sc.nextDouble();
					double area4 = areaOfCircle(r);
					System.out.println("Area of Triangle: " + area4);
					break;
				default:
					System.out.println("Enter the correct choice!");
				    break;
			}
			
			System.out.print("Do you want to continue (yes/no): ");
			sc.nextLine();
			String st = sc.nextLine();
			
			if(st.equals("no")){
				System.out.println("Existing...!");
				break;
			}
			
		}
	}
	public static double areaOfSquare(double side){
		
		return side * side;
		
	}
	public static double areaOfRectangle(double l,double b){
		
		return l * b;
		
	}
	public static double areaOfCircle(double r){
		
		return Math.PI * r * r;
		
	}
	public static double areaOfTriangle(double h,double b){
		
		return 0.5 * h * b;
		
	}
}
